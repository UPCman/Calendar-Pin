<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.daude.calendari" >

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SetmanaActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PopUpActivity"
            android:label="@string/title_activity_pop_up"
            android:theme="@style/AppTheme.CustomTheme" >
        </activity>
        <activity
            android:name=".AnadirEventoActivity"
            android:label="@string/title_activity_anadir_evento" >
        </activity>
        <activity
            android:name=".DiaActivity"
            android:label="@string/title_activity_dia" >
        </activity>
        <activity
            android:name=".TareasActivity"
            android:label="@string/title_activity_tareas" >
        </activity>
    </application>

</manifest>
